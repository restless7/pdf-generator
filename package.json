{
  "name": "@planmaestro/pdf-generator",
  "version": "1.0.0",
  "description": "Professional PDF generation service for PlanMaestro ecosystem",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cp -r src/templates dist/ 2>/dev/null || mkdir -p dist/templates && cp -r src/templates/* dist/templates/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "start": "node dist/server.js",
    "start:dev": "ts-node src/server.ts",
    "build:server": "tsc && cp -r src/templates dist/ 2>/dev/null || mkdir -p dist/templates && cp -r src/templates/* dist/templates/",
    "railway:build": "npm run build:server",
    "railway:start": "npm run start"
  },
  "dependencies": {
    "@types/showdown": "^2.0.6",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "pug": "^3.0.3",
    "puppeteer": "^24.15.0",
    "showdown": "^2.1.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/pug": "^2.0.10",
    "jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
